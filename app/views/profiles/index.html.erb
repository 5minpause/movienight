<h1>Search result</h1>

<% if @profiles.any? %>
  <ul>
    <% @profiles.each do |profile| %>
    <li>
      <%= profile.full_name %>
      <%= button_to "Send friend request", friendships_path(recipient: profile.user), method: :post,
          class: "btn btn-sm btn-primary" %>
    </li>
    <% end %>
  </ul>
<% else %>
  <p>Sorry, no users found.</p>
<% end %>
