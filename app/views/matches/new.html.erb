<h1>Match your friend's movies!</h1>

<% if @friends.any? %>
  <p>Select one or more friends to see which movies you both want to watch!</p>
  <%= form_tag match_path, method: "get" do %>
    <% @friends.each do |friend| %>
      <p>
        <%= check_box_tag "users_ids[]", friend.user.id, false, id: "user_#{friend.user.id}" %>
        <%= label_tag "user_#{friend.user.id}", friend.full_name %>
      </p>
    <% end %>

    <%= submit_tag "See matching movies!", name: nil %>
  <% end %>
<% else %>
  <p>Add some friends <%= link_to "from your profile page", profile_path(current_user_profile) %> to see which movies you both want to watch!</p>
<% end %>
