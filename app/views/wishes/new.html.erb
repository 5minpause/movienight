<h1>Add movies to your wishlist ❤️</h1>
<p><%= link_to 'Go to your wishlist', wishes_path %></p>

<%= form_with url: remote_movies_path, method: :get, local: true do |f| %>
  <div class="field">
    <%= f.label :search, 'Search for movies' %>
    <%= f.text_field :search %>
    <%= f.submit "Search", name: nil  %>
  </div>
<% end %>
