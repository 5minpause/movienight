<h1>Your movie wishlist</h1>
<p><%= link_to "Add a movie", new_wish_path %></p>


<div class="wishlist">
  <ul>
    <% @wishes.each do |wish| %>
      <li class="wish" data-wish-id="<%= wish.id %>">
        <%= movie_poster_image(wish.movie.poster_path) %>
        <%= content_tag :span, truncate(wish.movie.title, length: 50), class: "wish__title" %>
        <%= button_to "Remove movie", wish_path(wish), method: :delete,
              data: { confirm: "Are you sure?" }, remote: true, class: "wish__remove-button btn btn-sm btn-danger" %>
      </li>
    <% end %>
  </ul>
</div>
