<h1>Your movie wishlist</h1>
<p><%= link_to "Add a movie", new_wish_path %></p>

<div class="wishes-index">
  <% @wishes.each do |wish| %>
    <div class="wishes-index__wish">
      <%= movie_poster_image(wish.movie.poster_path) %>
      <%= content_tag(:span, wish.movie.title) %>
      <%= link_to "Remove movie", wish_path(wish), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>
</div>
